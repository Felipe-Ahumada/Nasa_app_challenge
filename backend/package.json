{
  "name": "zuricatas-simulator-backend",
  "version": "1.0.0",
  "description": "Backend API for Zuricatas Simulator - NASA Space Apps Challenge 2025",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "seed": "node seedAsteroids.js",
    "init-nasa": "node initializeNasaData.js",
    "sync-nasa": "node -e \"require('./src/utils/nasaApi').syncAsteroidData().then(() => process.exit(0)).catch(e => {console.error(e); process.exit(1);})\""
